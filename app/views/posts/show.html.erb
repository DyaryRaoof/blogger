<div class="single-post-detail-box padding-3-pixels main-border">
    <span>
        <p><%= @post.title %> by <%= @user.name%></p>
        <p><%= @post.text%></p>
    </span>
    <span>
        <p>
            Comments: <%= @post.comments_counter%>, Likes: <%= @post.likes_counter%>
        </p>
    </span>

</div>
<p><%= render 'list_of_comments', comments: @comments, user: @user %></p>
<div class="center-button">
    <%= link_to 'New Comment', new_user_post_comment_path(post_id: params[:id]), class: 'btn btn-secondary mb-3 text-center' %>
</div>
